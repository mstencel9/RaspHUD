#:import Animation kivy.animation.Animation
#:import MDProgressBar kivymd.progressbar.MDProgressBar
#:import MDSlider kivymd.slider.MDSlider
#:import MDList kivymd.list.MDList
#:import MDButton kivymd.button.MDRaisedButton
#:import math math

# Set Global Font Types to save typing later
#:set GaugeFont "data/fonts/Eurostile LT Std Medium.ttf"
#:set ButtonFont "data/fonts/Eurostile LT Std Extended 2.ttf"

AnchorLayout:
    ScreenManager:
        id: sm
        Gauge4Screen:
            name: "gauge4"
            FloatLayout:
                Image:
                    source: "data/wallpapers/black.png"

                # MPH and RPM Information
                Label:
                    text: str(math.floor(app.Speed))
                    font_size: 80
                    pos: 150, -183  # Adjusted to be on the left
                    font_name: GaugeFont
                Label:
                    text: app.SpeedUnit
                    font_size: 15
                    pos: 200, -200  # Close to MPH label
                    font_name: GaugeFont
                Label:
                    text: str(app.RPM)
                    font_size: 80
                    pos: -150, -183  # Below MPH information
                    font_name: GaugeFont
                Label:
                    text: "RPM"
                    font_size: 15
                    pos: -100, -200  # Close to RPM label
                    font_name: GaugeFont

                # Gear Display in the Middle
                Label:
                    text: app.currentgear
                    font_size: 100
                    size_hint: None, None
                    height: 50
                    width: 100
                    pos: 350, 140  # Positioned centrally
                    font_name: GaugeFont

                #Shift warning at the top
                Label:
                    text: 
                        'SHIFT' if app.RPM > 5900 else None
                    font_size: 100
                    size_hint: None, None
                    height: 50
                    width: 100
                    pos: 350, 50  # Positioned centrally
                    font_name: GaugeFont
